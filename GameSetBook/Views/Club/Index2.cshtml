@model AllClubsSortingModel
@{
    ViewBag.Title = "Explore All Clubs";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="get">
    <div class="row">
        <div class="form-group col-md-3 d-flex justify-content-between">
            <div class="form-group">
                <label asp-for="City"></label>
                <select asp-for="City" class="form-control">
                    <option value="">All</option>
                    @foreach (var city in Model.Cities)
                    {
                        <option value="@city">@city</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Club name">
        </div>

        <div class="form-group col-md-3">
            <div class="form-group">
                <label asp-for="ClubSorting"></label>
                <select asp-for="ClubSorting" class="form-control">
                    <option value="0">Newest</option>
                    <option value="1">Price (Low -> High)</option>
                    <option value="2">Price (High -> Low)</option>
                    <option value="3">Rating (Low -> High)</option>
                    <option value="4">Rating (High -> Low)</option>
                    <option value="5">Number of courts (Low -> High)</option>
                    <option value="6">Number of courts (High -> Low)</option>
                </select>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group mt-4 p-2">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }
    var maxPage = Math.Ceiling((double)Model.TotalClubCount /
       Model.ClubsPerPage);
}

<div class="row mb-5">
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Club"
           asp-action="Index2"
           asp-route-currentPage="@previousPage"
           asp-route-category="@Model.City"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.ClubSorting)"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
        !Model.Clubs.Any();
    }

    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="Club"
           asp-action="Index2"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-category="@Model.City"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.ClubSorting)">>></a>
    </div>
</div>

@if (!Model.Clubs.Any())
{
    <h2 class="text-center">No clubs found by the given criteria!</h2>
}

<div class="container col-sm-10">
    <div class="text-center row">
        <table class="table table-striped">
            <thead class=" table-dark">
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">City</th>
                    <th scope="col">Working Time</th>
                    <th scope="col">Prices From</th>
                    <th scope="col">Courts</th>
                    <th scope="col">Rating</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var club in Model.Clubs)
                {
                    <tr>
                        <td><img src="~/@club.LogoUrl" style="max-width: 40px; max-height: 40px;" /></td>
                        <td>@club.Name</td>
                        <td>@club.CityName</td>
                        <td>@club.WorkingTimeStart - @club.WorkingTimeEnd</td>
                        <td>@club.Prcie</td>
                        <td>@club.NumberofCourts</td>
                        <td>
                            @if (@club.Rating > 0)
                            {
                                @club.Rating
                            }
                            else
                            {
                                <small>No Rating</small>
                            }
                        </td>
                        <td>
                            <a asp-controller="Club" asp-action="Details" asp-route-id="@club.Id" class="btn btn-primary">Details</a>
                            <a asp-controller="Court" asp-action="Index" asp-route-id="@club.Id" class="btn btn-success">Reserve</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
