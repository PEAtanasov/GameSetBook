@model CourtCreateFormModel[]
@{
    IEnumerable<SelectListItem> surfaces = ViewBag.Surfaces;
    ViewBag.Title = "Add Courts";

}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Create" method="post">
            @for (var i = 0; i < Model.Count(); i++)
            {
                <input type="hidden" asp-for="@Model[i].ClubId" />
                <h3 class="text-center">Court No.@(i + 1)</h3>
                <div class="mb-3">
                    <label asp-for="@Model[i].Name" class="form-label"></label>
                    <input asp-for="@Model[i].Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model[i].Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model[i].PricePerHour" class="form-label"></label>
                    <input asp-for="@Model[i].PricePerHour" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model[i].PricePerHour" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model[i].Surface" class="form-label"></label>
                    <select asp-for="@Model[i].Surface" class="form-select" asp-items="surfaces"></select>
                    <span asp-validation-for="@Model[i].Surface" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-4">
                        <label>
                            Lights
                            <input type="checkbox" asp-for="@Model[i].IsLighted" />
                            <span asp-validation-for="@Model[i].IsLighted" class="text-danger"></span>
                        </label>
                    </div>
                    <div class="col-4">
                        <label>
                            Indoor
                            <input type="checkbox" asp-for="@Model[i].IsIndoor" />
                            <span asp-validation-for="@Model[i].IsIndoor" class="text-danger"></span>
                        </label>
                    </div>
                </div>
                <hr />
            }
            <div class="mb-3 text-center">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

