@model IEnumerable<CourtScheduleViewModel>
@{
    var clubInfo = ViewData["ClubInfo"];

    DateTime? cuurentDate = ViewData["CurrentDate"] as DateTime?;
    string displayDate = ViewData["CurrentDate"]?.ToString() ?? string.Empty;
    int WorkingTimeStart = Model.First().Bookings.Min(b => b.Hour);
    int WorkingTimeEnd = Model.First().Bookings.Max(b => b.Hour);
    int? clubId = ViewData["ClubId"] as int?;
    ViewBag.Title = "Courts Schedule";   
}

<h2 class="text-center">@ViewBag.Title for @DateTime.Parse(displayDate).ToShortDateString()</h2>
<hr/>

<div class="container">
    <div class="row">
        <!-- Left part: Render _ClubInfoPartial.cshtml -->
        <div class="col-md-3">
            <partial name="_ClubInfoPartial" model="@clubInfo" />
        </div>
        <!-- Right part: Display court schedule -->
        <div class="col-md-9">
           
            <form asp-action="Schedule" method="get">
                <div class="row">
                    <div class="form-actions no-color col-auto">
                        <div class="row align-items-center">
                            <div class="col">
                                <input asp class="form-control" type="date" id="date" name="date" value="@displayDate" />
                            </div>
                            <div class="col">
                                <input type="submit" value="Ok" class="btn btn-primary" />
                            </div>
                            <div class="col-auto">
                                <!-- Arrow to move one day backwards -->
                                @if (cuurentDate != null)
                                {
                                    <a asp-controller="Court" asp-action="Schedule" asp-route-id="@clubId" asp-route-date="@cuurentDate.Value.AddDays(-1)" class="btn btn-primary">	&larr; Previous Day</a>
                                }
                            </div>
                            <div class="col-auto">
                                <!-- Arrow to move one day forwards -->
                                @if (cuurentDate != null)
                                {
                                    <a asp-controller="Court" asp-action="Schedule" asp-route-id="@clubId" asp-route-date="@cuurentDate.Value.AddDays(1)" class="btn btn-primary">Next Day 	&rarr;</a>
                                }
                            </div>                           
                        </div>
                    </div>
                </div>
            </form>
          
            <div class=" row mt-4">
                <div class="col-sm-10">
                    <div class="text-center">
                        <table class="table table table-hover table-bordered table-responsive-md">
                            <thead class="table-dark">
                                <tr>
                                    <th>@DateTime.Parse(displayDate).ToShortDateString()</th>
                                    @foreach (var court in Model)
                                    {
                                        <th>
                                            <strong>@court.Name</strong>
                                            <br />
                                            <small class="text-sm-center">@court.Surface </small>
                                            <br />

                                            @if (court.IsIndoor)
                                            {
                                                <small class="text-sm-start">
                                                    Indoor
                                                </small>
                                            }
                                            @if (court.IsLighted)
                                            {
                                                <small class="text-sm-end">
                                                    Lighted
                                                </small>
                                            }
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody class="table-group-divider">
                                @for (int i = @WorkingTimeStart; i <= WorkingTimeEnd; i++)
                                {
                                    <tr>
                                        <th>
                                            @if (i<10)
                                            {
                                                <span>0@(i):00</span>
                                            }
                                            else
                                            {
                                                <span>@(i):00</span>
                                            }
                                        </th>
                                        @foreach (var court in Model)
                                        {
                                            var booking = null as BookingScheduleViewModel;
                                            foreach (var booked in court.Bookings)
                                            {

                                                if (booked.Hour == i)
                                                {
                                                    booking = booked;
                                                    break;
                                                }
                                            }
                                            <td>
                                                @if (booking != null && booking.IsAvailable)
                                                {
                                                    if (booking.BookingDate.Date < DateTime.Now.Date || (booking.BookingDate.Date == DateTime.Now.Date && booking.Hour <= DateTime.Now.Hour))
                                                    {
                                                        <button class="btn btn-sm btn-danger disabled">Unavailable</button>
                                                    }
                                                    else
                                                    {
                                                        <form asp-controller="Booking" asp-action="Book" method="get">
                                                            <input type="hidden" name="CourtId" value="@court.Id" />
                                                            <input type="hidden" name="Hour" value="@booking.Hour" />
                                                            <input type="hidden" name="BookingDate" value="@booking.BookingDate" />
                                                            <button type="submit" class="btn btn-sm btn-success">Book/<small>@(court.Price)BGN</small></button>
                                                        </form>
                                                    }
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-danger disabled">Booked</button>
                                                }
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>