@model CountryDetailsAdminViewModel
@{
    ViewBag.Title = "Country Details";
}

<h1>@Model.Name Details</h1>

<h2>Cities</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model.Cities)
        {
            <tr>
                <td>@city.Name</td>
                <td>
                    <a asp-controller="City" asp-action="Details" asp-route-id="@city.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Clubs</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>City</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var club in Model.Clubs)
        {
            <tr>
                <td>@club.Name</td>
                <td>@club.City</td>
                <td>
                    <a asp-controller="Club" asp-action="Details" asp-route-id="@club.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Button to trigger modal -->
<div class="form-group">
    <button type="button" class="btn btn-danger mb-2 w-25 p-3 fw-bold" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
        Delete Country
    </button>
</div>

<!-- Delete Country Modal -->

<form asp-controller="Country" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <strong class="text-danger">Are you sure you want to delete this country? This action cannot be undone and all data related to this country will be permanently deleted!!!</strong>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>