@model IEnumerable<CountryAdminServiceModel>
@{
    ViewBag.Title = "All Countries";
}

<h1 class="text-center">@ViewBag.Title</h1>

<div class="text-center mb-3">
    <a asp-area="Admin" asp-controller="Country" asp-action="Add" class="btn btn-success">
        <i class="fa fa-plus-circle"></i> Add Country
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.Id</td>
                <td>@country.Name</td>
                <td>
                    <a asp-controller="Country" asp-action="Details" asp-route-id="@country.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
