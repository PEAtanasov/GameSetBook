@using GameSetBook.Core.Contracts.Admin
@model ClubDetailsAdminViewModel
@inject IClubServiceAdmin clubservice

@{
    ViewBag.Title = $"Manage Club {Model.Name}";
    bool isApproved = await clubservice.IsClubApprovedAsync(Model.Id);
    bool isClubDeleted = await clubservice.IsDeletedAsync(Model.Id);
}

<div>
    @await Component.InvokeAsync(nameof(ClubMenuComponent), new { clubId = Model.Id })
</div>

<h1 class="text-center pb-3">@ViewBag.Title</h1>

<div class="row">
    <div class="col col-3">
        <a asp-area="Admin" asp-controller="Booking" asp-action="Index" asp-route-ClubId="@Model.Id" class="btn btn-primary mb-2 w-100 p-3 fw-bold">All Bookings</a>
    </div>
    <div class="col col-3">
        <a asp-area="Admin" asp-controller="Review" asp-action="AllClubReviews" asp-route-ClubId="@Model.Id" class="btn btn-primary mb-2 w-100 p-3 fw-bold">All Reviews</a>
    </div>
    @if (isApproved == true && isClubDeleted==false)
    {
        <div class="col col-3">
            <a asp-area="Admin" asp-controller="Club" asp-action="Schedule" asp-route-Id="@Model.Id" class="btn btn-primary mb-2 w-100 p-3 fw-bold">Schedule</a>
        </div>
    }
   
</div>
<partial name="_ClubDetailsPartial" model="Model" />

<div class="row pt-3">
    <div class="col col-3">
        <a asp-area="Admin" asp-controller="Club" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mb-2 w-100 p-3 fw-bold">Edit CLub Details</a>
    </div>
    <div class="col col-3">
        <button type="button" class="btn btn-danger mb-2 w-100 p-3 fw-bold" data-bs-toggle="modal" data-bs-target="#confirmationModal">
            Delete Club
        </button>
    </div>
    <div class="col col-3">
        <a asp-area="Admin" asp-controller="Club" asp-action="HardDelete" asp-route-id="@Model.Id" class="btn btn-dark mb-2 w-100 p-3 fw-bold">Hard Delete Club</a>
    </div>
    <div class="col col-3">
        <a asp-area="Admin" asp-controller="Court" asp-action="Add" asp-route-clubId="@Model.Id" class="btn btn-success mb-2 w-100 p-3 fw-bold">Add Court</a>
    </div>
</div>

<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this club?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-area="Admin" asp-controller="Club" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ClubOwnerId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
