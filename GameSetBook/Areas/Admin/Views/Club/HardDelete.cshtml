@model ClubHardDeleteAdminServiceModel

@{
    ViewData["Title"] = "Delete Club";
}

<h1>Delete Club: @Model.Name</h1>

<img src="~/@Model.LogoUrl" alt="@Model.Name Logo" class="img-fluid" style="max-width: 300px; max-height: 350px;" />

<h4 class="text-danger">Are you sure you want to delete the club <strong>@Model.Name</strong>?</h4>

<p><strong>Club Details:</strong></p>
<ul>
    <li>Name: @Model.Name</li>
    <li>Total Courts Count: @Model.TotalCourtsCount</li>
    <li>Total Bookings Count: @Model.TotalBookingsCount</li>
    <li>Total Reviews Count: @Model.TotalReviewsCount</li>
    <li>Club Owner Email: @Model.ClubOwnerEmail</li>
</ul>

<form asp-action="HardDelete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ClubOwnerId" />

    <div class="form-group">
        <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
            Delete Club
        </button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Cancel</a>
    </div>

    <!-- Confirmation Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the club <strong>@Model.Name</strong>? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-dark">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>

