@model ClubDetailsAdminViewModel

@{
    ViewBag.Title = "Pending Club Details";
}

<h1 class="text-center pb-3">@ViewBag.Title</h1>

<partial name="_ClubDetailsPartial" model="Model"/>

<div class="row pt-3">
    <div class="col col-3">
        <form asp-area="Admin" asp-controller="Club" asp-action="ApproveClub" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3 text-center">
                <input class="btn btn-success mb-2 w-100 p-3 fw-bold" type="submit" value="Approve Club" />
            </div>
        </form>
    </div>
    <div class="col col-3">
        <a asp-area="Admin" asp-controller="Club" asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary mb-2 w-100 p-3 fw-bold">Edit Club Details</a>
    </div>
    <div class="col col-3">
        <a asp-area="Admin" asp-controller="Court" asp-action="Add" asp-route-clubId="@Model.Id" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary mb-2 w-100 p-3 fw-bold">Add Court</a>
    </div>
    <div class="col col-3">
        <button type="button" class="btn btn-danger mb-2 w-100 p-3 fw-bold" data-bs-toggle="modal" data-bs-target="#confirmationModal">
            Delete Club
        </button>
    </div>
</div>

<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this club?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-area="Admin" asp-controller="Club" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>